{
	"name": "heroui-mcp",
	"version": "1.0.0",
	"type": "module",
	"scripts": {
		"dev": "bun run src/index.ts",
		"dev:stdio": "cross-env TRANSPORT=stdio bun run src/index.ts",
		"dev:http": "cross-env TRANSPORT=http bun run src/index.ts",
		"build": "tsc --project tsconfig.json && tsc-alias -p tsconfig.json",
		"start": "node dist/src/index.js",
		"start:stdio": "cross-env TRANSPORT=stdio node dist/src/index.js",
		"start:http": "cross-env TRANSPORT=http PORT=3005 node dist/src/index.js",
		"test": "vitest",
		"test:run": "vitest run",
		"test:coverage": "vitest run --coverage",
		"check": "pnpm lint && pnpm type-check && pnpm test:run",
		"format": "biome format --write .",
		"lint": "biome lint .",
		"type-check": "tsc --noEmit"
	},
	"dependencies": {
		"@modelcontextprotocol/sdk": "^1.17.4",
		"dotenv": "^17.2.1",
		"express": "^5.1.0",
		"zod": "^3.25.76"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.1.2",
		"@commitlint/cli": "^19.8.1",
		"@commitlint/config-conventional": "^19.8.1",
		"@types/express": "^5.0.3",
		"@types/node": "^24.0.15",
		"@types/supertest": "^6.0.3",
		"cross-env": "^10.0.0",
		"husky": "^9.1.7",
		"supertest": "^7.1.3",
		"tsc-alias": "^1.8.16",
		"typescript": "^5.8.3",
		"vitest": "^3.2.4"
	}
}
